<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="id: 1     Hinh vuong co bao nhieu canh?"
                android:textColor="@color/design_default_color_primary" />
            <TextView
                android:id="@+id/textAnswerA"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="58dp"
                android:layout_marginTop="6dp"
                android:text="A. 4 cạnh " />

            <TextView
                android:id="@+id/textAnswerB"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="58dp"
                android:layout_marginTop="10dp"
                android:text="B. 5 cạnh " />

            <TextView
                android:id="@+id/textAnswerC"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="58dp"
                android:layout_marginTop="10dp"
                android:text="C. 6 cạnh " />

            <TextView
                android:id="@+id/textAnswerD"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="58dp"
                android:layout_marginTop="10dp"
                android:text="D. 7 cạnh " />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>